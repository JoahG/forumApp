<div class="hero-unit form"><h1>Log in</h1><br>

<%= form_tag sessions_path do %>
	<p>
		<%= text_field_tag :email, params[:email], :placeholder => "Email Address" %>
	</p>
	<p>
		<%= password_field_tag :password,nil, :placeholder => "Password" %>
	</p>
	<p class="button"><%= submit_tag "Log in", :class => 'btn' %></p>

	<p class="tos_check">
	  	<%= check_box_tag :remember_me, 1, params[:remember_me] %> Remember Me
	</p>
</div>
<% end %>