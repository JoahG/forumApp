<br>

<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
		<div class="error_messages">
			<h2>Form is invalid</h2>
			<ul>
				<% for message in @user.errors.full_messages %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<p>
		<%= f.text_field :name, :placeholder => "Name", :class => 'signup_field' %>
	</p>
	<p>
		<%= f.text_field :email, :placeholder => "Email Address", :class => 'signup_field' %>
	</p>
	<p>
		<%= f.password_field :password, :placeholder => "Password", :class => 'signup_field' %>
	</p>
	<p>
		<%= f.password_field :password_confirmation, :placeholder => "Password Confirmation", :class => 'signup_field' %>
	</p>
	<p class="button"><%= f.submit(:class => 'btn') %></p>
<% end %>