<p class="post_page_title">
  <%= @post.title %>
  <span class="post_page_author">
  	by <%=link_to @post.user.name, @post.user %>
  </span>
</p>

<p class="post_page_content">
  <%= @post.content %>
</p>

<% if @post.comments.length > 0 %>
  <% @post.comments.each do |comment| %>
    <div id="disqus_thread">
      <p class="inline"><%= image_tag avatar_url(comment.user, 80), :class => 'comment_avatar' %></p>
      <p class="inline comment_header">Commented by <%= link_to comment.user.name, comment.user%>  <%= time_ago_in_words(comment.created_at) %> ago.</p><br>
      <p class="inline comment_body"><p id="<%=comment.id%>"><%=comment.content%></p></p>
    </div>
  <%end%>
<%end%>

<%if current_user %>
<div id="disqus_thread">
<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.text_area :content, :class => 'full_wide' %>
  </div>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :post_id, :value => @post.id %>
  <div class="actions">
    <%= f.submit %> Comments are parsed with <a href="http://daringfireball.net/projects/markdown/syntax">Markdown Syntax</a>
  </div>
</div>
<% end %>
<%end%>