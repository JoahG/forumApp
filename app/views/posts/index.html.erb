<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.user.email %></td>
    <td><%= link_to 'Show', post %></td> <%if current_user == post.user %>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td><%end%>
  </tr>
<% end %>
</table>

<br />

<% if current_user %>
  <%= link_to 'New Post', new_post_path %>
<% end %>