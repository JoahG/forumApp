<header>
  <p>Welcome</p>
</header>
<div id="post_container">
<% if @posts.length < 10 %>
  <% @posts.reverse.each do |post| %>
   <div class="post">
     <%= link_to post.title, post, :class => 'post_title' %> by <span class="post_author"><%=link_to post.user.name, post.user %></span>
   </div>
  <% end %>
<% else %>
  <% @posts[-10,10].reverse.each do |post| %>
   <div class="post">
     <%= link_to post.title, post, :class => 'post_title' %> by <span class="post_author"><%= post.user.name %></span>
   </div>
  <% end %>
<% end %>
</div>

<div id="sign_in">
  <% if !current_user %>
    <p class="titlelg">Log In</p>
    <%= form_tag sessions_path do %>
      <p>
        <%= label_tag :email %><br>
        <%= text_field_tag :email, params[:email] %>
      </p>
      <p>
        <%= label_tag :password %><br>
        <%= password_field_tag :password %>
      </p>
      <span class="button"><%= submit_tag "Log in" %></span>
      <span class="button">or <%= link_to "Sign Up", sign_up_path %></span>
    <% end %>
  <% else %>
      <p class="titlelg">Welcome, <%= current_user.name %>!</p><br>
      <p class="centered">
        <%= image_tag avatar_url(current_user, 80) %><br><br>
        <%= link_to 'New Post', new_post_path %><br>
        <%= link_to 'View my profile', current_user %><br>
        <%= link_to 'Edit my account', edit_user_path(current_user) %><br>
        <%= link_to 'Delete my account', current_user, method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>
  <%end%>
</div>